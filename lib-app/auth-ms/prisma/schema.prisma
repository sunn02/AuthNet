generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Token {
  id        String   @id @default(uuid())
  token     String               // El token en sí, como un JWT
  expiresAt DateTime             // Fecha de expiración del token
  userId    String               // ID del usuario asociado, referencia cruzada al microservicio de usuario
}
